#! /bin/sh

# keybindings
pgrep -x sxhkd > /dev/null || sxhkd &

# autostart apps

startup_lock_file=/tmp/bspwm-startup.lock
if [ ! -f $startup_lock_file ]; then
  echo "bspwm startup_lock_file" > $startup_lock_file
  # picom --config ~/dots/picom/picom.conf -b 
  pulseaudio -D
  unclutter &
  clipit &
fi

# set wallpaper
hsetroot -solid "#0f0f0f"

# wm config

EXTERNAL_MONITOR="HDMI-1"

if [[ $(xrandr -q | grep "${EXTERNAL_MONITOR} connected") ]]; then
    bspc monitor -d 1 2 3
    bspc monitor HDMI-1 -d 4 5 6
else
    bspc monitor -d 1 2 3 4 5 6
fi

bspc config border_width         3
bspc config focused_border_color "#8aabac"
bspc config active_border_color  "#262626"
bspc config normal_border_color  "#262626"
bspc config window_gap           8

bspc config split_ratio           0.52
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true

# floating apps

FLOATING_APPS=(ncspot URxvt:scratch Nm-connection-editor Pavucontrol feh)

for app in "${FLOATING_APPS[@]}"
do
    bspc rule -a $app state=floating center=on follow=on
done

bspc rule -a ncspot rectangle=700x300+0+0
bspc rule -a Pavucontrol rectangle=900x420+0+0
bspc rule -a Nm-connection-editor rectangle=400x500+0+0

# launch polybar
$HOME/dots/polybar/launch.sh

# external rules
bspc config external_rules_command "$HOME/.config/bspwm/external-rules.sh"
