set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"

set font "DM Mono 10"

set completion-bg               "#000000" # Background
set completion-fg               "#4c4c4c" # Comment
set completion-group-bg         "#000000" # Background
set completion-group-fg         "#4c4c4c" # Comment
set completion-highlight-bg     "#191919" # Selection
set completion-highlight-fg     "#c1c1c1" # Foreground

set index-bg                    "#000000" # Background
set index-fg                    "#c1c1c1" # Foreground
set index-active-bg             "#191919" # Current Line
set index-active-fg             "#c1c1c1" # Foreground

set inputbar-bg                 "#000000" # Background
set inputbar-fg                 "#c1c1c1" # Foreground
set statusbar-bg                "#000000" # Background
set statusbar-fg                "#c1c1c1" # Foreground

set highlight-color             "#8aac8b" # Orange
set highlight-active-color      "#aca98a" # Pink

set default-bg                  "#000000" # Background
set default-fg                  "#c1c1c1" # Foreground

set render-loading              true
set render-loading-fg           "#000000" # Background
set render-loading-bg           "#c1c1c1" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#000000" # Background
set recolor-darkcolor           "#c1c1c1" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true
map <C-Tab> toggle_statusbar
set guioptions ""
